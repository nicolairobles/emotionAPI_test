<!--|
/ Intro Section
/=========================================================================================|-->
<section id="intro" class="intro-section overlay-black">
  <div class="clouds">
    <div class="clouds_one"></div>
    <div class="clouds_two"></div>
    <div class="clouds_three"></div>
  </div>

  <div class="overlay-inner">
    <div class="container">
          <!--|Site Brand|-->
      <div class="site-brand">
        <!--|Logo|-->
        <a class="fp-logo" href="/">    
        <%= image_tag 'emotize-logo-footer.png' %>
        </a> <!--|End Logo|-->
      </div> <!--|End Site Brand|-->

      <!--|Intro Content|-->
      <div class="intro-content">
        <div class="row">
          <div class="col-md-8 block-center">
            <h2 class="intro-title wow fadeInDown" data-wow-delay=".1s">Level Up Your Speaking</h2>
            <h3><strong>Helping you measure your emotions in the workplace.</strong></h3>
            <a href="#section-1" class="btn btn-primary btn-lg startbtn">Learn More</a>
            <a href="/videos/new" class="btn btn-primary btn-lg startbtn">Start Session</a>
            <script type="text/javascript">
              $('.btn').click(function(event){
                $('html, body').animate({
                  scrollTop: $( $.attr(this, 'href') ).offset().top
                }, 500);
                event.preventDefault();
              });
            </script>
          </div>
        </div>
      </div> <!--|End Intro Content|-->

      <!--|Scroll Down Icon|-->
      <span class="scroll-down"><i class="ion-ios-arrow-thin-down"></i></span>
    </div>
  </div>
</section> <!--|Intro Section|-->


